@model eCommerce.Models.Tag

<form method="post" asp-action="DeleteTag">
    <input asp-for=Id hidden />
    <div class="border p-3 mt-4 col-6">

        <div class="row pb-2">
            <h2>Delete Tag</h2>
            <hr />
        </div>

        <div class="mb-3 ">
            <label asp-for="TagName"></label>
            <input asp-for="TagName" class="form-control" disabled />

        </div>
        <div class="mb-3 ">
            <label asp-for="TagCreatedDateTime"></label>
            <input asp-for="TagCreatedDateTime" class="form-control" disabled />

        </div>
        <div class="row pb-3">
            <hr />
        </div>
        <button type="submit" class="btn btn-danger" style="width:175px"><i class="bi bi-trash"></i>&nbsp;Delete Tag</button>
        <a class="btn btn-danger" style="width:175px" asp-controller="Tag" asp-action="Index"><i class="bi bi-skip-backward-circle"></i>&nbsp; Back to List</a>

    </div>

</form>

