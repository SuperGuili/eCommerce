@model IEnumerable<Category>


@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="CreateCategory"><i class="bi bi-plus-circle"></i>&nbsp; Create Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:33%">
                    @obj.CategoryName
                </td>
                <td style="width:33%">
                    @obj.DisplayOrder
                </td>
                <td style="width:33%">
                    @obj.CategoryCreatedDateTime
                </td>
            </tr>
        }
    </tbody>
</table>

