@model eCommerce.Models.Category

<form method="post" asp-action="DeleteCategory">
    <input asp-for=Id hidden />
    <div class="border p-3 mt-4 col-6">

        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3 ">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" class="form-control" disabled />

        </div>
        <div class="mb-3 ">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />

        </div>
        <div class="row pb-3">
            <hr />
        </div>
        <button type="submit" class="btn btn-danger" style="width:175px"><i class="bi bi-trash"></i>&nbsp;Delete Category</button>
        <a class="btn btn-danger" style="width:175px" asp-controller="Category" asp-action="Index"><i class="bi bi-skip-backward-circle"></i>&nbsp; Back to List</a>

    </div>

</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

