@model IEnumerable<eCommerce.Models.Tag>

@{
    ViewData["Title"] = "TAG List";
    eCommerce.Models.Tag labels = Model.FirstOrDefault();
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tag List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Tag" asp-action="CreateTag"><i class="bi bi-plus-circle"></i>&nbsp; Create Tag</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped text-center" style="width:100%">
    <thead>
        <tr>
            <th>
                <label asp-for="@labels.TagName"></label>
            </th>
            <th>
                <label asp-for="@labels.TagDiscountPCent"></label> %
            </th>
            <th>
                <label asp-for="@labels.TagCreatedDateTime"></label>
            </th>
            <th>
                <label asp-for="@labels.TagEditedDateTime"></label>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:30%" class="text-start">
                    @obj.TagName
                </td>
                 <td style="width:10%" class="text-center">
                    @obj.TagDiscountPCent %
                </td>
                <td style="width:20%">
                    @obj.TagCreatedDateTime
                </td>
                <td style="width:20%">
                    @obj.TagEditedDateTime
                </td>
                <td style="width:30%">
                    <div class="btn-group w-75" role="group">
                        <a class="btn btn-info btn-sm mx-2" asp-controller="Tag" asp-action="EditTag" asp-route-Id="@obj.Id">
                            <i class="bi bi-pencil-square"></i>&nbsp;Edit
                        </a>
                        <a class="btn btn-danger btn-sm mx-2" asp-controller="Tag" asp-action="DeleteTag" asp-route-Id="@obj.Id">
                            <i class="bi bi-trash"></i>&nbsp;Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


