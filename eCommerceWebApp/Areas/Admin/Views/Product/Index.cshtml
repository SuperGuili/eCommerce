@{
    ViewData["Title"] = "Product List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Product" asp-action="UpsertProduct"><i class="bi bi-plus-circle"></i>&nbsp; Create Product</a>
        </div>
    </div>


    <table id="productTable" class="table table-bordered table-striped text-center" style="width:100%">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Stock
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
                <th>
                    Tag
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
